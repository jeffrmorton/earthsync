{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-process-exit": "warn",
    "curly": ["error", "multi-line"],
    "eqeqeq": ["error", "always"],
    "no-shadow": "warn",
    "prefer-const": "warn"
  },
  "ignorePatterns": ["node_modules/", "coverage/", "*.log"]
}
